<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pratik_laptop.techcare.DoctorActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/doc_textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Doctor"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/doc_editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Doctor name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/doc_editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Specialization"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/doc_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Hospital/Clinic Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/doc_editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/doc_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/doc_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
